<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.team_id.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <page name="sales_purchases" position="inside">
                <label for="sales_team_ids" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}"/>
                <field name="sales_team_ids" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}"/>
            </page>
            <notebook position="inside">
                <page string="CV">
                    <field name="cv_text"/>
                </page>
            </notebook>
        </field>
      </record>
  
</odoo>
