<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.inherited.sale_margin_report</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <tree decoration-info="invoice_status=='to invoice'" position="inside">
                    <field name="sale_revenue" invisible="1"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
