<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="pricelist_item_currency_exchange_form" model="ir.ui.view">
        <field name="name">product.pricelist.item.currency.exchange.form</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">
            <form position="inside">
				<div attrs="{'invisible': [('compute_price', '=', 'formula'), ('base', '=', 'base_price')]}">
					<separator string="Currency Exchange"/>
					<group>
						<field name="from_currency_id"/>
						<field name="currency_exchange_rate"/>
					</group>
                </div>
            </form>
        </field>
    </record>
    
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.currency_exchange.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Base Price">
                    <group>
                        <field name="base_price"  widget="monetary" options="{'currency_field': 'base_currency_id'}"/>
                        <field name="base_currency_id"/>
                    </group>
                    <field name="base_price_ids">
                        <tree editable="bottom">
                            <field name="price" widget="monetary" options="{'currency_field': 'base_currency_id'}"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="currency_id"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
    
</odoo>
